<resources>

    <!-- Base application theme which is based on light material theme with dark action bar -->
    <style name="Eshotroid.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main colors of the app -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/Eshotroid.Toolbar</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>

        <!-- ActionBar style -->
        <!-- Affects ActionBar button text colors -->
        <item name="actionMenuTextColor">?android:attr/textColorPrimaryInverseDisableOnly</item>
        <!-- Affects ActionBar overflow button color -->
        <item name="colorControlNormal">?android:attr/textColorPrimaryInverse</item>
    </style>

    <!-- Customized toolbar style -->
    <style name="Eshotroid.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Eshotroid.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/Eshotroid.Toolbar.Subtitle</item>
    </style>

    <!-- Customized toolbar title style -->
    <style name="Eshotroid.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <!-- Customized toolbar subtitle style -->
    <style name="Eshotroid.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <!-- Application theme -->
    <style name="Eshotroid" parent="Eshotroid.Base" />

</resources>
