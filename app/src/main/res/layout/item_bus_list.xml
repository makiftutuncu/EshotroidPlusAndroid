<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/item_bus_list_id"
            android:layout_width="48dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <CheckBox
            android:id="@+id/item_bus_list_isStarred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/checkbox_star" />

        <ImageView
            android:id="@+id/item_bus_list_departureIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/item_bus_list_id"
            android:layout_toRightOf="@id/item_bus_list_id"
            android:src="@mipmap/ic_chevron_right" />

        <TextView
            android:id="@+id/item_bus_list_departure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_bus_list_departureIcon"
            android:layout_toLeftOf="@id/item_bus_list_isStarred"
            android:layout_toStartOf="@id/item_bus_list_isStarred"
            android:layout_toRightOf="@id/item_bus_list_departureIcon"
            android:layout_toEndOf="@id/item_bus_list_departureIcon"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/item_bus_list_arrivalIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/item_bus_list_id"
            android:layout_toRightOf="@id/item_bus_list_id"
            android:src="@mipmap/ic_chevron_left" />

        <TextView
            android:id="@+id/item_bus_list_arrival"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/item_bus_list_isStarred"
            android:layout_toStartOf="@id/item_bus_list_isStarred"
            android:layout_toRightOf="@id/item_bus_list_arrivalIcon"
            android:layout_toEndOf="@id/item_bus_list_arrivalIcon"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>